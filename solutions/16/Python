I=*open(h:=0),
for i in range(110):
 for p in[(0,i,1,0),(i,0,0,1),(i,109,0,-1),(109,i,-1,0)]:
  Q=[p];V=set()
  while Q:x,y,s,t=q=Q.pop();Q+=[[],[z:=(x+s,y+t,s,t)],[[(x+1,y,1,0),(x-1,y,-1,0)],[z]][s],[[(x,y+1,0,1),(x,y-1,0,-1)],[z]][t],[(x-t,y-s,-t,-s)],[(x+t,y+s,t,s)]][(q in V)==0<=x<110>y>=0!=V.add(q)and" .-|/".find(I[y][x])]
  V=len({(v[:2])for v in V});h<1==print(V);h=max(h,V)
print(h)