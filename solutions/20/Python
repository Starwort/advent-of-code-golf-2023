I={}
q=1
O=L=F=0
D={}
for i in open(0):
 n,_,*d=i.replace(*', ').split();I[z:=n[1:3]]=[n[0],0,d]
 if'rx'in d:G=n[1:]
 for x in d:D[x]={**D.get(x,{}),z:0}
C={*D[G]}
while C:
 I['ro'][:2],*Q=[P:='%',1],['ro',0,0];F+=1
 for e,p,o in Q:
  O+=F<1001*-~-p;L+=F<1001*p;t,s,l=I.get(e,3*P)
  if(e in C)>p:q*=F;C-={e}
  if P<t:D[e][o]=p;s=all(D[e].values())
  if(t<=P)>p or P<t:s^=1;I[e][1]=s;Q+=[[d,s,e]for d in l]
print(O*L,q)