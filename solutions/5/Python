S,*I=[[int(x)for x in l.split()if":">x]for l in open(0)]
for*T,in zip(S,[0]*99),zip(S[::2],S[1::2]):
 n=[]
 for h in I:
  if h:
   P,L,A,N,*T=*h,T
   for o,h in N:l=L-o;F=h-l-A;i=(l>0)+3*(F>0)-(F>h)+(-F>A);s=i%3<1;n+=[[P-l*s,[h,F+A,0,h-F,A][i]]][:i^2];T+=[[o,[l,h][i==2]],[L+A,F]][s:i//3+1]
  else:T+=n;n=[]
 print(min(T+n)[0])